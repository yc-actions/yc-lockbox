{
  "name": "yc-actions-yc-lockbox",
  "version": "2.0.0",
  "description": "GitHub Action to fetch secret from Yandex Cloud Lockbox.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-lockbox.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "CDN",
    "purge"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@yandex-cloud/nodejs-sdk": "^2.7.7"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^2.10.1",
    "@types/mustache": "^4.2.5",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.13.0",
    "@vercel/ncc": "^0.38.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  }
}
